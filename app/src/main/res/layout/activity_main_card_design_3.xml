<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/shp_main_activity_card_background"
    android:padding="15dp">
    

    <TextView
        android:id="@+id/activity_main_card_title"
        android:layout_toRightOf="@id/activity_main_card_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#404040"
        android:textSize="18sp"
        android:text="Â¿Pregunta?"/>



    <TextView
        android:id="@+id/activity_main_card_subtitle"
        android:layout_below="@id/activity_main_card_title"
        android:layout_alignLeft="@id/activity_main_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#606060"
        android:textStyle="italic"
        android:textSize="15sp"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt"/>


    <TextView
        android:id="@+id/activity_main_card_watson_quote"
        android:layout_below="@id/activity_main_card_subtitle"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#a0a0a0"
        android:textSize="12sp"
        android:text="Powered by IBM Watson"/>


</RelativeLayout>
