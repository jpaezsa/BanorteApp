<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BanorteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/black</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">false</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PopUpTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/toolbar_secondary_color</item>
        <item name="android:textColorSecondary">@color/toolbar_secondary_color</item>
        <item name="android:textColor">@color/toolbar_secondary_color</item>
        <item name="android:colorBackground">@color/primary_dark</item>
    </style>

    <style name="ToolbarTheme" parent="BanorteTheme">
        <item name="android:textColorPrimary">@color/toolbar_secondary_color</item>
        <item name="android:textColorSecondary">@color/toolbar_secondary_color</item>
        <item name="android:textColor">@color/toolbar_secondary_color</item>
    </style>

</resources>
